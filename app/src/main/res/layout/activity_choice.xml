<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mogsev.myapplication.activity.ChoiceActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/choice_operation"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="?android:attr/dividerHorizontal" />

    <CheckBox
        android:id="@+id/checkBoxSum"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:singleLine="false"
        android:text="@string/title_sum"
        android:textSize="18sp"
        android:checked="false" />

    <CheckBox
        android:id="@+id/checkBoxSubtraction"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/title_subtraction"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxMultiplication"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/title_multiplication"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxDivision"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/title_division"
        android:textSize="18sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical"
            android:layout_above="@+id/btn_begin_multi"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_begin_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="startActivity"
            android:text="@string/action_begin" />
    </RelativeLayout>

</LinearLayout>
