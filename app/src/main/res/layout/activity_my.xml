<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_ten">

        <TableRow>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_table_multiplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="@drawable/layout_training"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_table_multiplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/table" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_table_multiplication"
                    android:layout_centerHorizontal="true"
                    android:text="@string/title_table_multiplication"
                    android:textColor="@color/primary_text_default_material_light"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/layout_training"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/plus_sign" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_sum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:text="@string/title_sum"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_subtraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/layout_training"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/minus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_subtraction"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:text="@string/title_subtraction"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_multiplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/layout_training"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_multiplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/multiplication" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_multiplication"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:text="@string/title_multiplication"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/layout_training"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/division" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_division"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:text="@string/title_division"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/training_multi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="@drawable/layout_training_shadow"
                android:onClick="startActivity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four"
                    android:src="@mipmap/other" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_multi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_four"
                    android:text="@string/title_multi"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textSize="@dimen/text_size_sixteen" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignTop="@+id/button_results"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical" />

        <Button
            android:id="@+id/button_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="startActivity"
            android:text="@string/title_results" />
    </RelativeLayout>
</LinearLayout>


